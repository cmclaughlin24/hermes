{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../../.",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@hermes/common(|/.*)$": "<rootDir>/libs/common/src/$1",
    "^@hermes/health(|/.*)$": "<rootDir>/libs/health/src/$1",
    "^@hermes/iam(|/.*)$": "<rootDir>/libs/iam/src/$1"
  }
}
