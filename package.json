{
  "name": "hermes",
  "version": "0.0.1",
  "description": "",
  "author": "Wm. Curtis McLaughlin",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:notification": "nest build notification",
    "build:distribution": "nest build distribution",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:notification": "nest start notification --watch",
    "start:distribution": "nest start distribution --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "docker-compose up -d database",
    "test:e2e": "jest --config ./apps/notification/test/jest-e2e.json --detectOpenHandles --forceExit",
    "posttest:e2e": "docker-compose down && docker-compose rm -f database"
  },
  "dependencies": {
    "@bull-board/api": "^4.11.1",
    "@bull-board/express": "^4.11.1",
    "@golevelup/nestjs-rabbitmq": "^3.5.0",
    "@nestjs-modules/mailer": "^1.7.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/bullmq": "^1.1.0",
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.3.9",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.9",
    "@nestjs/devtools-integration": "^0.1.5",
    "@nestjs/microservices": "^9.3.9",
    "@nestjs/platform-express": "^9.3.9",
    "@nestjs/sequelize": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/terminus": "^10.0.1",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.38.0",
    "@opentelemetry/sdk-metrics": "^1.15.1",
    "@opentelemetry/sdk-node": "^0.41.1",
    "amqp-connection-manager": "^4.1.11",
    "amqplib": "^0.10.3",
    "axios": "^1.3.4",
    "bullmq": "^3.10.1",
    "cache-manager": "^5.2.2",
    "cache-manager-ioredis-yet": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "flat": "^5.0.2",
    "handlebars": "^4.7.7",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "nestjs-twilio": "^4.0.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sequelize": "^6.29.1",
    "sequelize-typescript": "^2.1.5",
    "twilio": "^4.13.0",
    "web-push": "^3.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.9",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/luxon": "^3.3.0",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.7",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "overrides": {
    "twilio": {
      "axios": "$axios"
    },
    "@nestjs-modules/mailer": {
      "@nest/common": "$@nest/common"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "main.ts",
      ".module.ts",
      ".dto.ts",
      ".entity.ts",
      "./test/",
      "./config/"
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@hermes/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "axios": "axios/dist/node/axios.cjs",
      "^@hermes/health(|/.*)$": "<rootDir>/libs/health/src/$1"
    }
  }
}
