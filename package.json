{
  "name": "hermes",
  "version": "0.0.1",
  "description": "",
  "author": "Wm. Curtis McLaughlin",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:notification": "nest build notification",
    "build:distribution": "nest build distribution",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:notification": "nest start notification --watch",
    "start:distribution": "nest start distribution --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/hermes/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "docker-compose up -d database",
    "test:e2e": "jest --config ./apps/notification/test/jest-e2e.json --detectOpenHandles --forceExit",
    "posttest:e2e": "docker-compose down && docker-compose rm -f database"
  },
  "dependencies": {
    "@bull-board/api": "^5.8.0",
    "@bull-board/express": "^5.8.0",
    "@bull-board/nestjs": "^5.8.1",
    "@golevelup/nestjs-rabbitmq": "^4.0.0",
    "@nestjs-modules/mailer": "^1.9.1",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/bullmq": "^10.0.1",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/devtools-integration": "^0.1.5",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/terminus": "^10.0.1",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.39.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.41.2",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.41.2",
    "@opentelemetry/resource-detector-docker": "^0.1.2",
    "@opentelemetry/resources": "^1.15.2",
    "@opentelemetry/sdk-metrics": "^1.15.2",
    "@opentelemetry/sdk-node": "^0.41.2",
    "@opentelemetry/sdk-trace-node": "^1.15.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "bullmq": "^4.7.2",
    "cache-manager": "^5.2.3",
    "cache-manager-ioredis-yet": "^1.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "flat": "^5.0.2",
    "handlebars": "^4.7.8",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "luxon": "^3.4.0",
    "nestjs-twilio": "^4.1.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.2",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "twilio": "^4.15.0",
    "web-push": "^3.6.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.1.3",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.3",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "@types/sequelize": "^4.28.15",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "twilio": {
      "axios": "$axios"
    },
    "@nestjs-modules/mailer": {
      "@nest/common": "$@nest/common"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "main.ts",
      ".module.ts",
      ".dto.ts",
      ".entity.ts",
      "./test/",
      "./config/"
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@hermes/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@hermes/health(|/.*)$": "<rootDir>/libs/health/src/$1",
      "^@hermes/open-telemetry(|/.*)$": "<rootDir>/libs/open-telemetry/src/$1",
      "^@hermes/iam(|/.*)$": "<rootDir>/libs/iam/src/$1"
    }
  }
}